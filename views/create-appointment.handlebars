<div class="col-md-6">
    <h2>Create Appointment</h2>

    <form class="form new-appointment-form">
      <div class="form-group">
        <label for="doctor-details">Doctor Details: {{doctor.first_name}} {{doctor.last_name}} (<span style="color:#538b01;">{{doctor.speciality}}</span>)</label>
        {{!-- <input class="form-input" type="text" id="patient-first-name" /> --}}
      </div>
      <div class="form-group">
        <label for="doctor-id" style="display:none">Doctor ID</label>
        <input class="form-input" type="text" style="display:none" id="doctor-id" value="{{doctor.doctors_id}}" />
      </div>
      <div class="form-group">
        <label for="patient-first-name">patient first name:</label>
        <input class="form-input" type="text" id="patient-first-name" />
      </div>
      <div class="form-group">
        <label for="patient-last-name">patient last name:</label>
        <input class="form-input" type="text" id="patient-last-name" />
      </div>
      <div class="form-group">
        <label for="appointment-date">appointment date:</label>
        <input class="form-input" type="date" id="appointment-date" />
      </div>
      <div class="form-group">
        <label for="notes">notes:</label>
        <input class="form-input" type="text" id="notes" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">create appointment</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/create-patient-appointment.js"></script>